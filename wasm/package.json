{
  "name": "wasm-payment-plan",
  "version": "2.1.8",
  "description": "",
  "author": "Victor Ribeiro de Lima",
  "license": "",
  "scripts": {
    "build": "wasm-pack build --target nodejs --release -- --features $FEATURE",
    "build:simple": "FEATURE=simple npm run build",
    "build:iterative": "FEATURE=iterative npm run build",
    "test:simple": "npm run build:simple && glob -c \"tsx --test --test-reporter spec \" \"./test/simple/**/*.spec.ts\"",
    "test:iterative": "npm run build:iterative && glob -c \"tsx --test --test-reporter spec \" \"./test/iterative/**/*.spec.ts\"",
    "build:web": "rm -rf pkg && wasm-pack build --out-name index --release -- --features iterative",
    "test": "npm run test:simple && npm run test:iterative"
  },
  "devDependencies": {
    "@types/node": "22.5.4",
    "glob": "11.0.0",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsc-alias": "1.8.10",
    "tsconfig-paths": "4.2.0",
    "tsx": "4.19.1",
    "typescript": "5.4.5"
  },
  "dependencies": {
    "test": "^3.3.0"
  }
}