{
  "name": "@ParceladoLara/payment-plan-node",
  "version": "0.1.0",
  "description": "",
  "main": "./javascript/src/index.js",
  "module": "./javascript/src/index.js",
  "author": "Victor Ribeiro de Lima",
  "types": "./javascript/types/src/index.d.ts",
  "license": "",
  "files": [
    "javascript/src/index.mjs",
    "javascript/src/types/index.d.ts",
    "native/index.node"
  ],
  "scripts": {
    "start": "tsx ./ts/index.ts",
    "build": "cargo-cp-artifact -nc index.node -- cargo build --message-format=json-render-diagnostics",
    "build:release": "npm run build -- --release --features $FEATURE && npx tsc",
    "build:bmp": "FEATURE=bmp npm run build:release",
    "build:qitech": "FEATURE=qitech npm run build:release",
    "release:native": "npm run build:qitech && rm -rf native && mkdir native && mv ./index.node ./native/index.node",
    "test:bmp": "node --test 'javascript/test/bmp/*.spec.*'",
    "test:qitech": "node --test 'javascript/test/qitech/*.spec.*'",
    "test": "npm run test:bmp && npm run test:qitech"
  },
  "devDependencies": {
    "@types/node": "22.5.4",
    "cargo-cp-artifact": "0.1",
    "glob": "11.0.0",
    "i": "0.3.7",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsc-alias": "1.8.10",
    "tsconfig-paths": "4.2.0",
    "tsx": "4.19.1",
    "typescript": "5.4.5"
  }
}